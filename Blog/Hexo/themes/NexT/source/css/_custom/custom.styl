// Custom styles.

/************* 首页美化 **************/

// 页面头部背景
.header {
  /* 本地 */
  /* background: url(/images/header_background.jpg); */
  /* 七牛云存储 */
  background: url(http://pbedarn4e.bkt.clouddn.com/image/jpg/header_background.jpg);
}

// 头部inner
.header-inner {
  margin:0 auto;
  padding: 70px 0 47px;
  width: 100%;
}

// 标题背景
.brand {
  background: transparent; // 透明
}

// 标题
.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: 48px;
  font-weight: normal;
  font-family: 'Lobster Two', 'Roboto Slab', "PingFang SC", "Microsoft YaHei", sans-serif;
}

// 副标题
.site-subtitle {
  font-size: 15px;
  color: #fff;
}

// 菜单栏
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
  background: rgba(240, 240, 240, 0.5);
  margin-left: auto;
  margin-right: auto;
  width: 530px;
  border-radius: initial;
}

