// 文章背景框框
.post {
  margin-top: 60px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5); //太暗了，看不见
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
  box-shadow: 0 0 5px rgba(202, 203, 203, .5);
}

// 站点描述
