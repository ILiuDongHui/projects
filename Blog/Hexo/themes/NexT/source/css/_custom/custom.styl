//  行代码块样式
code {
  color: #ff7600;
  background: #fbf7f8;
  margin: 2px;
}

//  大代码块自定义样式
.highlight,
pre {
  margin: 5px 0;
  padding: 5px;
  border-radius: 3px
}

.highlight,
code,
pre {
  border: 1px solid #d6d6d6;
}
